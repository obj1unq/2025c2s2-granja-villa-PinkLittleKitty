import wollok.game.*
import personaje.*
import cultivos.*

program farmville {
	//  CONFIG	
	game.title("La granja")
	game.height(10)
	game.width(10)
	game.ground("ground.png")

	//  VISUALES
 	game.addVisualCharacter(personaje)

	keyboard.m().onPressDo({personaje.tryPlant(new Maiz())})
	keyboard.t().onPressDo({personaje.tryPlant(new Trigo())})
	keyboard.o().onPressDo({personaje.tryPlant(new Tomaco())})

	keyboard.r().onPressDo({personaje.tryWater()})

	keyboard.c().onPressDo({personaje.harvest()})

 	//  COMIENZA
	game.start()
}
